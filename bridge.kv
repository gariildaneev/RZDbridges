<StartScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 10
        Label:
            text: "Введите данные сооружения"
        TextInput:
            id: km_input
            hint_text: "Километр"
        TextInput:
            id: per_input
            hint_text: "Перегон"
        Button:
            text: "Далее"
            background_color: (0,1,0,1)
            on_release: root.next_screen()

<CountScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 10
        Label:
            text: "Введите количество опор и пролётов"
        TextInput:
            id: supports_input
            hint_text: "Количество опор"
            input_filter: "int"
        TextInput:
            id: spans_input
            hint_text: "Количество пролётов"
            input_filter: "int"
        Button:
            text: "Создать кнопки"
            background_color: (0,1,0,1)
            on_release: root.create_buttons()

<PhotoScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: 10
        spacing: 10
        BoxLayout:
            size_hint_y: None
            height: 50
            Button:
                text: "Добавить элемент"
                on_release: print("Добавлен новый элемент")
            Button:
                text: "Завершить"
                background_color: (0,1,0,1)
                on_release: print("Архивация фото")
        BoxLayout:
            id: container
